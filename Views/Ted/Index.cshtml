@model IEnumerable<WebApplication4.Models.Client>


<hr />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<hr />

@using (Html.BeginForm("Index", "Ted", FormMethod.Get, new { @class = "form-group" }))
{
    @Html.TextBox("Name", null, htmlAttributes: new { @class = "control-label col-md-2", autofocus = "autofocus", placeholder = "客戶名稱" })
    <br/><br/>
    @Html.TextBox("Phone", null, htmlAttributes: new { @class = "control-label col-md-2", autofocus = "autofocus", placeholder = "連絡電話" })

    <div class="form-actions no-color">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
}


<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
